{
  "name": "codify",
  "displayName": "codify",
  "description": "spotify extension for vs code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spotify.playPause",
        "title": "Play/Pause"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spotify",
          "title": "Spotify",
          "icon": "./spotify.svg"
        }
      ]
    },
    "views": {
      "spotify": [
        {
          "icon": "./spotify.svg",
          "type": "webview",
          "id": "spotifyView",
          "name": "Spotify Player",
          "when": "true"
        }
      ]
    }
  },"activationEvents": [
    "onView:spotifyView"
  ],
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "spotify-web-api-node": "^5.0.2"
  }
}
